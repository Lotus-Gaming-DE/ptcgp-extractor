# Path to tcgdex/cards-database clone within the project
TCGDEX_REPO=tcgdex

# Maximum parallel imports
CONCURRENCY=10

# Log verbosity: info, warn or error
LOG_LEVEL=info

# Directory for log files
LOG_DIR=logs  # used by Node.js and Python logs

# Optional: interval for log rotation (e.g., '1d' or '1h')
LOG_ROTATION_INTERVAL=

# Optional: maximum size per log file (e.g., '1m')
LOG_MAX_SIZE=

# Print first 500 characters of output after export when set
DEBUG=

# Token for Snyk security scans
SNYK_TOKEN=

# Railway deployment variables
RAILWAY_TOKEN=
RAILWAY_SERVICE=
RAILWAY_ENV=
